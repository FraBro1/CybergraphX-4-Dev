	@{"    " Link "NODE_CGXMODE_EDITWND_HPULSE"} Horizontal Pulse Length
	@{"    " Link "NODE_CGXMODE_EDITWND_HSPOL"} Horizontal Sync Polarity
	@{"    " Link "NODE_CGXMODE_EDITWND_VRES"} Vertical Resolution
	@{"    " Link "NODE_CGXMODE_EDITWND_VSYNC"} Vertical Sync Length
